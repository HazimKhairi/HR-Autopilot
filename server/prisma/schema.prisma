// Prisma Schema for Invisible HR
// This defines the database structure using SQLite for fast local testing

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Employee Model: Stores employee information
model Employee {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique // Email for authentication and lookup
  role            String    // e.g., "Software Engineer", "Marketing Manager"
  salary          Int       // Monthly salary in local currency
  country         String    // e.g., "Malaysia", "Singapore"
  leaveBalance    Int       // Number of leave days remaining
  visaExpiryDate  DateTime? // Optional: For employees requiring work visas
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  resume          Resume?   // One-to-one relationship with Resume
}

// Resume Model: Stores employee resume and professional data
model Resume {
  id              Int       @id @default(autoincrement())
  employeeId      Int       @unique // Foreign key to Employee
  employee        Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  phone           String?   // Phone number
  summary         String?   // Professional summary
  skills          String?   // JSON array of skills (stored as string)
  experience      String?   // JSON array of work experience
  education       String?   // JSON array of education
  resumeText      String?   // Full resume text
  extractedData   String?   // Extracted structured data from AI
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Policy Model: Stores company policies for RAG (Retrieval Augmented Generation)
model Policy {
  id        Int      @id @default(autoincrement())
  content   String   // The policy text (e.g., "Lunch allowance is RM20")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
